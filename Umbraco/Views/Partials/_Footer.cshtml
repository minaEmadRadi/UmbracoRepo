@inherits UmbracoViewPage
@{
    var homePage = Model.AncestorOrSelf<Home>();
}
<!-- Footer-->
<footer class="border-top">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <ul class="list-inline text-center">
                    @foreach (var sociallink in homePage.FooterSocialLink)
                    {
                        <li class="list-inline-item">
                            <a href="@sociallink.Url">
                                <span class="fa-stack fa-lg">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="fab fa-@sociallink.Network fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                    }
                </ul>
                <div class="small text-center text-muted fst-italic">@Umbraco.GetDictionaryValue("Copyright")</div>
            </div>
        </div>
    </div>
</footer>